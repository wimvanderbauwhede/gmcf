#SetOption('implicit_cache', 1)
import os
from GannetBuilder import build

GMCF_DIR=os.environ["GMCF_DIR"]
wd=ARGUMENTS.get('wd','.')

def isLocal(libname):
	return os.path.exists(wd+'/src/GPRM/Kernel/'+libname+'.cc')

libnames=ARGUMENTS.get('sclib','')
sclibnames=libnames.split(',')
sclibs=[]
for libname in sclibnames:
	libsrc=''
	if isLocal(libname):	 
		libsrc=wd+'/src/GPRM/Kernel/'+libname+'.cc'
	print libsrc
	sclibs+=[] # libsrc]

sbasources=Split("""
Bytecode.cc
ServiceConfiguration.cc
Packet.cc
Base/ServiceCoreControl.cc
Base/CoreServices.cc
Base/Let.cc
Services.cc
Memory.cc
LookupTable.cc
TaskDescription.cc
Tile.cc
ServiceManager.cc
GatewayTile.cc
Gateway.cc
Interface.cc
Transceiver.cc
System.cc
Runtime.cc
Timings.cc
""")

sbasources = [GMCF_DIR+'/GannetVM/src/SBA/'+s for s in sbasources]

build(wd,(sclibs+sbasources))

